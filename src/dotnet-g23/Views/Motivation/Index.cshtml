@using System.Threading.Tasks
@using dotnet_g23.Models.Domain
@{
    ViewData["Title"] = "Motivatie ingeven";
}

@model dotnet_g23.Models.ViewModels.MotivationViewModels.IndexViewModel

<div class="content">
    <div class="container-fluid">
        @Html.Partial("_Messages")
        <div class="row">
            <div class="col-lg-12">
                <h1>Mijn motivaties</h1>
                @if (Model.GroupMotivation == null) {
                    <em>Er is nog geen motivatie ingegeven voor deze groep</em>
                }
                else {
                    <div class="card">
                        <p>
                            @Model.GroupMotivation.MotivationText
                            @*<a asp-controller="Group" asp-action="Index" class="btn btn-primary btn-md f-right">Beheren</a>*@
                        </p>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 m-t-3">
                <h1>Geregistreerde organisaties</h1>
                    <form asp-controller="Organization" asp-action="Index" method="get" class="form-horizontal">
                        <textarea id="motivation" cols="20" rows="2" runat="server"></textarea>
                        <input type="submit" value="Zoek" class="btn btn-secondary btn-md f-right" />
                    </form>
            </div>
        </div>
    </div>
</div>