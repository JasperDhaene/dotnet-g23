@using System.Threading.Tasks
@using dotnet_g23.Models.Domain
@{
    ViewData["Title"] = "Motivatie ingeven";
}

@model dotnet_g23.Models.ViewModels.MotivationViewModels.IndexViewModel

@Html.Partial("_ContainerStart")
    <div class="row">
        <div class="col-lg-12">
            <h1>Motivatie voor groep '@Model.Group.Name'</h1>
            <form asp-controller="Motivation" asp-action="Update" asp-route-id="@Model.Group.GroupId" method="post" class="m-t-1">
                <div class="row">
                    <div class="col-lg-6">
                        <p>
                            <label for="organizationName" class="d-block">
                                Naam organisatie*
                            </label>
                            <input type="text" name="motivation.OrganizationName" id="organizationName" value="@Model.Motivation.OrganizationName" />
                        </p>
                        <p>
                            <label for="organizationAddress" class="d-block">
                                Adres organisatie*
                            </label>
                            <input type="text" name="motivation.OrganizationAddress" id="organizationAddress" value="@Model.Motivation.OrganizationAddress" />
                        </p>
                        <p>
                            <label for="organizationWebsite" class="d-block">
                                Website organisatie*
                            </label>
                            <input type="text" name="motivation.OrganizationWebsite" id="organizationWebsite" value="@Model.Motivation.OrganizationWebsite" />
                        </p>
                        <p>
                            <label for="organizationEmail" class="d-block">
                                Email organisatie*
                            </label>
                            <input type="email" name="motivation.OrganizationEmail" id="organizationEmail" value="@Model.Motivation.OrganizationEmail" />
                        </p>
                    </div>
                    <div class="col-lg-6">
                        <p>
                            <label for="contactTitle" class="d-block">
                                Aanspreektitel contactpersoon
                            </label>
                            <input type="text" name="motivation.OrganizationContactTitle" id="contactTitle" value="@Model.Motivation.OrganizationContactTitle" />
                        </p>
                        <p>
                            <label for="contactFirstName" class="d-block">
                                Voornaam contactpersoon
                            </label>
                            <input type="text" name="motivation.OrganizationContactFirstName" id="contactFirstName" value="@Model.Motivation.OrganizationContactFirstName" />
                        </p>
                        <p>
                            <label for="contactName" class="d-block">
                                Achternaam contactpersoon
                            </label>
                            <input type="text" name="motivation.OrganizationContactName" id="contactName" value="@Model.Motivation.OrganizationContactName" />
                        </p>
                        <p>
                            <label for="contactEmail" class="d-block">
                                Email contactpersoon
                            </label>
                            <input type="email" name="motivation.OrganizationContactEmail" id="contactEmail" value="@Model.Motivation.OrganizationContactEmail" />
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            <label for="motivationText" class="d-block">
                                Motivatie*
                            </label>
                            <textarea name="motivation.MotivationText" id="motivationText" rows="4" style="width: 100%;" placeholder="Voer hier uw motivatie in (tussen 100 en 250 karakters)" maxlength="250">@Model.Motivation.MotivationText</textarea>
                        </p>
                        <p>
                            <input type="submit" value="Opslaan" name="update" class="btn btn-primary btn-md" />
                            <input type="submit" value="Verzenden &raquo;" name="submit" class="btn btn-secondary btn-md" />
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
@Html.Partial("_ContainerEnd")