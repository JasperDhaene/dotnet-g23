@using System.Threading.Tasks
@using dotnet_g23.Models.Domain

@{
    ViewData["Title"] = "Register";
}

@model dotnet_g23.Models.ViewModels.OrganizationViewModels.IndexViewModel

@Html.Partial("_ContainerStart")
    <div class="row">
        <div class="col-lg-12">
            @if (Model.SubscribedOrganization == null) {
                <div class="alert alert-info m-t-1"><i class="fa fa-info-circle"></i> <strong>U bent niet in een organisatie geregistreerd.</strong> U kan zich inschrijven bij een organisatie die zich aansluit bij uw emailadres. Eenmaal u geregistreerd bent bij een organisatie, kan u zich aansluiten bij een groep van de organisatie.</div>
            }
            else
            {
                <h1>Mijn GB organisatie</h1>
                <div class="card">
                    @Model.SubscribedOrganization.Name (@Model.SubscribedOrganization.Location)
                    <span class="splitter">|</span>
                    <a asp-controller="Organization" asp-action="Show" asp-route-id="@Model.SubscribedOrganization.OrganizationId">Details &raquo;</a>
                    <a asp-controller="Group" asp-action="Index" class="btn btn-primary btn-md f-right">Groepen</a>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 m-t-3">
            <form asp-controller="Organization" asp-action="Index" method="get" class="form-horizontal f-sm-right" style="text-align: right;">
                <input type="text" placeholder="Naam of locatie" name="query" id="query" class="col-xs-7 col-md-4 push-md-6 col-lg-0 push-lg-0 f-lg-none" value="@ViewContext.HttpContext.Request.Query["query"]"/>
                <a href="#" onclick="$(this).closest('form')[0].submit();" class="btn btn-secondary btn-md">Zoeken</a>
            </form>
            <h1>Alle GB organisaties</h1>

            <br/>
            @if (Model.Organizations == null || !Model.Organizations.Any())
            {
                <div class="alert alert-info m-t-1"><i class="fa fa-info-circle"></i> Geen organisaties gevonden.
                </div>
            }
            else
            {
                foreach (var org in Model.Organizations)
                {

                    <div class="card">

                        <form asp-controller="Organization" asp-action="Register" method="post" class="form-horizontal">
                            @org.Name (@org.Location) <span class="splitter">|</span>
                            <a asp-controller="Organization" asp-action="Show" asp-route-id="@org.OrganizationId">Details &raquo;</a>
                            <input type="hidden" value="@org.OrganizationId" name="organizationId"/>

                            @if (Model.SubscribedOrganization == null)
                            {
                                <a href="#" onclick="$(this).closest('form')[0].submit();" class="btn btn-primary btn-md f-right">Registreren</a>
                            }

                        </form>

                    </div>

                }
            }
        </div>
    </div>
@Html.Partial("_ContainerEnd")