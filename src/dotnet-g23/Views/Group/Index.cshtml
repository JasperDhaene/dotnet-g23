@using System.Threading.Tasks
@using dotnet_g23.Models.Domain
@using dotnet_g23.Models.Domain.State

@{
    ViewData["Title"] = "Groepen";
}

@model dotnet_g23.Models.ViewModels.GroupViewModels.IndexViewModel
@Html.Partial("_ContainerStart")
    <div class="row">
        <div class="col-lg-12">
            <div class="clearfix">
                <h1 class="f-md-left">Mijn groep voor GB organisatie '@Model.Organization.Name'</h1>

                @if (Model.SubscribedGroup == null)
                {
                    <a asp-controller="Group" asp-action="Create" class="btn btn-primary btn-md f-sm-left f-md-right">Groep aanmaken</a>
                }
            </div>

            @if (Model.SubscribedGroup == null)
            {
                <div class="alert alert-info m-t-1"><i class="fa fa-info-circle"></i> U bent niet in een groep ingeschreven. Maak een groep aan of registreer u bij een open groep van de organisatie.</div>
            }
            else
            {
                <div class="card">
                    @Model.SubscribedGroup.Name <span class="badge">@Model.SubscribedGroup.Participants.Count @(Model.SubscribedGroup.Participants.Count() == 1 ? "cursist" : "cursisten")</span>
                    <a asp-controller="Group" asp-action="Show" asp-route-id="@Model.SubscribedGroup.GroupId" class="btn btn-primary btn-md f-sm-right">Dashboard</a>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 m-t-3">
            <h1>Groepen</h1>
            @if(Model.SubscribedGroup != null && (Model.SubscribedGroup.Context.CurrentState is InitialState || Model.SubscribedGroup.Context.CurrentState is SubmittedState)){
                <h3>Uitnodigingen</h3>
                @if (Model.InvitedGroups == null || !Model.InvitedGroups.Any())
                {
                    <div class="alert alert-info m-t-1"><i class="fa fa-info-circle"></i> Geen uitnodigingen tot toetreden van een groep gevonden.</div>
                }
                else
                {
                    foreach (var group in Model.InvitedGroups)
                    {
                        <div class="card">
                            <form asp-controller="Group" asp-action="Register" asp-route-id="@group.GroupId" method="post">
                                @group.Name <span class="badge">@group.Participants.Count @(group.Participants.Count() == 1 ? "cursist" : "cursisten")</span>
                                @if (Model.SubscribedGroup == null)
                                {
                                    <a href="#" onclick="$(this).closest('form')[0].submit();" class="btn btn-secondary btn-md f-sm-right">Toetreden</a>
                                }
                            </form>
                        </div>
                    }
                }
            }
            <h3>Open groepen</h3>
            @if (Model.OpenGroups == null || !Model.OpenGroups.Any())
            {
                <div class="alert alert-info m-t-1"><i class="fa fa-info-circle"></i> Geen open groepen gevonden.</div>
            }
            else
            {
                foreach (var group in Model.OpenGroups)
                {
                    <div class="card">
                        <form asp-controller="Group" asp-action="Register" asp-route-id="@group.GroupId" method="post">
                            @group.Name <span class="badge">@group.Participants.Count @(group.Participants.Count == 1 ? "cursist" : "cursisten")</span>
                            <span class="splitter">|</span>
                            <a asp-controller="Group" asp-action="Show" asp-route-id="@group.GroupId">Details &raquo;</a>
                            @if (Model.SubscribedGroup == null && (group.Context.CurrentState is InitialState || group.Context.CurrentState is SubmittedState))
                            {
                                <a href="#" onclick="$(this).closest('form')[0].submit();" class="btn btn-secondary btn-md f-sm-right">Toetreden</a>
                            }
                        </form>
                    </div>
                }
            }
        </div>
    </div>
@Html.Partial("_ContainerEnd")