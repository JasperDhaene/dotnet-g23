@{
    ViewData["Title"] = "Groep aanmaken";
}

@Html.Partial("_ContainerStart")
    <div class="row">
        <div class="col-lg-12">
            <h1>Groep aanmaken</h1>
            <form asp-controller="Group" asp-action="Create" method="post" class="m-t-1">
            <p>
                <label for="name" class="d-block">
                    Groepsnaam*
                </label>
                <input type="text" placeholder="Groepsnaam" name="name" id="name" autofocus />
            </p><p>
                <input type="checkbox" name="closed" id="closed" value="true" checked> <label for="closed">Gesloten groep</label>
            </p><p>
                <div class="alert alert-info">
                    <i class="fa fa-info-circle"></i> Gesloten groepen zijn niet zichtbaar voor gebruikers op het platform (uitgezonderd uitgenodigde cursisten).
                </div>
            </p><p>
                <a href="#" onclick="$(this).closest('form')[0].submit();" class="btn btn-primary btn-md">Groep aanmaken</a>
            </p>
            </form>
        </div>
    </div>
@Html.Partial("_ContainerEnd")