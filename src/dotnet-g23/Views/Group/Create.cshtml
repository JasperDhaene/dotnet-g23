@{
    ViewData["Title"] = "Groep aanmaken";
}

<div class="content">
    <div class="container-fluid">
        @Html.Partial("_Messages")
        <div class="row">
            <div class="col-lg-12">
                <h1>Groep aanmaken</h1>
                <form asp-controller="Group" asp-action="Create" method="post">
                    <p>
                        Naam: <br />
                        <input type="text" placeholder="Groepsnaam" name="name" />
                    </p>
                    <p>
                        <input type="checkbox" name="closed" checked> <label for="closed">Gesloten groep</label>
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i> Gesloten groepen zijn niet zichtbaar voor gebruikers op het platform (uitgezonderd uitgenodigde cursisten).
                        </div>
                    </p>
                    <br />
                    <input type="submit" value="Groep aanmaken" class="btn btn-primary btn-md" />
                </form>
            </div>
        </div>
    </div>
</div>